{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Regressing Health Expenditure against Life Expectancy",
    "subtitle": [
      "Scatter of Current Health Expenditure (% of GDP) vs Life Expectancy (at birth).",
      "Data from UK and Selected Former Colonies (2000 - 2019)",
      "Source: World Bank"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "darkblue"
  },
  "height": 350,
  "width": 400,
  "config": {"background": "white", "view": {"stroke": "transparent"}},
  "data": {
    "url": "https://raw.githubusercontent.com/Kudavellyj/Kudavellyj.github.io/main/p_combined_lehs.csv",
    "format": {"type": "csv"}
  },
  "transform": [{"filter": "datum.date==Year"}],
  "params": [
    {
      "name": "Year",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2019,
        "step": 1,
        "name": "Select a Year:"
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "color": "blueviolet",
        "opacity": 1,
        "size": 100
      },
      "encoding": {
        "x": {
          "field": "value_right",
          "type": "quantitative",
          "title": "Health Expenditure (% of GDP)"
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Life Expectancy (at birth)",
          "scale": {"domain": [0, 90]}
        },
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Country:",
          "scale": {"scheme": "yellowgreenblue"}
        },
        "tooltip": [
          {"field": "country", "type": "ordinal", "title": "Country"},
          {
            "field": "value",
            "type": "quantitative",
            "title": "Life Expectancy (at birth)",
            "format": ".0f"
          },
          {
            "field": "value_right",
            "type": "quantitative",
            "title": "Health Expenditure (% of GDP)",
            "format": ".2f"
          },
          {"field": "date", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "red"},
      "transform": [{"regression": "value", "on": "value_right", "extent": [1, 8.75]}],
      "encoding": {
        "x": {"field": "value_right", "type": "quantitative"},
        "y": {"field": "value", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "value", "on": "value_right", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {"text": {"type": "ordinal", "field": "R2"}}
    }
  ]
}